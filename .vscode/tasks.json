{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (Current File)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}/${relativeFileDirname}", // Путь к текущей папке
                "-B", "${workspaceFolder}/${relativeFileDirname}/build_windows",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Конфигурация и сборка проекта с помощью CMake"
        },
        {
            "label": "Run CMD Script",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "${workspaceFolder}/1Laba/WinScript.cmd" // Путь к скрипту в текущей папке
            ],
            "windows": {
                "command": "cmd.exe",
                "args": [
                    "/c",
                    "${workspaceFolder}/1Laba/WinScript.cmd"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "${workspaceFolder}/1Laba/UbuntuScript.sh"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Запуск скрипта в зависимости от ОС"
        },
        {
            "label": "Run Ubuntu Script",
            "type": "shell",
            "command": "bash",
            "args": [
                "${workspaceFolder}/1Laba/UbuntuScript.sh"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Запуск Ubuntu-скрипта"
        }
    ]
}